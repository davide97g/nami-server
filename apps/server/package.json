{
  "name": "server",
  "version": "1.0.3",
  "description": "Node.js server with REST and WebSocket support",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "rm -rf dist && bun build src/server.ts --outdir dist --target node --minify",
    "start": "node dist/server.js",
    "deploy": "bash ./deploy.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3"
  }
}
